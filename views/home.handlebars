                    <input type="text" id="aligned-num" placeholder="Phone Number" />
                </div>
                <div class="pure-control-group">
                    <label for="aligned-dob">Date of Birth</label>
                    <input type="date" id="aligned-dob" placeholder="Date of Birth" />
                </div>
                <div class="pure-controls">
                    <button type="submit" class="pure-button pure-button-primary" id="submit-sign">Submit</button>
                </div>
            </fieldset>
            </form>
      </div>
    </div>

